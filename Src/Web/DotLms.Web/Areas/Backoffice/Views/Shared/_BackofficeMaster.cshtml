<!DOCTYPE html>
<html>
<head>
    <!--Import Google Icon Font-->
    <!-- Meta -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>@ViewBag.Title | Backoffice</title>
    <!-- Favicon -->
    <link rel="shortcut icon" href="favicon.ico">
    <!-- Web Fonts -->
    <link rel='stylesheet' type='text/css' href='//fonts.googleapis.com/css?family=Open+Sans:400,300,600&amp;subset=cyrillic,latin'>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">


    @Styles.Render(BundleConstants.UnifyTemplateCssBundle)
    @Scripts.Render("~/bundles/jquery")
</head>
<body>
    @if (Request.IsAuthenticated && Context.User.IsInRole(DotLms.Common.Roles.Admin))
    {
        @Html.Partial("_BackofficeNavigation")
    }

    <main class="container">
        @RenderBody()
    </main>

    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render(BundleConstants.UnifyTemplateJsBundle)
</body>
</html>
